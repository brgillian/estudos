algoritmo "Fatorial02"
// Função :
// Autor :
// Data : 16/12/2020
// Seção de Declarações 
var
  C, N, F: Inteiro
  R: Caractere
inicio
// Seção de Comandos
   Repita
      Escreva("Digite um número: ")
      Leia(N)
      C <- N
      F <- 1
      Repita
         F <- F * C
         C <- C - 1
      Ate(C < 1)
      EscrevaL("O valor do fatorial de ", N, " é igual a ", F)
      Escreva("Quer continuar? [S/N]")
      Leia(R)
      LimpaTela
   Ate (R = "N")
fimalgoritmo
